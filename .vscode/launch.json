{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/test/debugger/main.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        },
        {
            "name": "Run mocha - unit tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "test/unit/*.js",
                "--no-timeouts"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            }
        },
        {
            "name": "Run mocha - e2e tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/src/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "test/e2e/*.js",
                "--no-timeouts"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "testing"
            }
        }
    ]
}